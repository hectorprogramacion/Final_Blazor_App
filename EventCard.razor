@page "/EventCard"

<h3>@Title</h3>
<p>@Description</p>
<span>Date: @Date.ToShortDateString()</span>
<EditForm Model="@eventModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
<div class="event-card">
    <label>Event Name:</label>
    <input @bind="EventName" />

    <label>Date:</label>
    <input type="date" @bind="EventDate" />

    <label>Location:</label>
    <input @bind="Location" />

    <label>Description:</label>
    <textarea @bind="Description"></textarea>
    </div>
</EditForm>
    <hr />

    <h3>@EventName</h3>
    <p><strong>Date:</strong> @EventDate.ToShortDateString()</p>
    <p><strong>Location:</strong> @Location</p>
    <p>@Description</p>
    <nav>
        <NavLink href="/EventList" class="nav-link">Event List</NavLink>
        <NavLink href="/Details" class="nav-link">Details</NavLink>
        <NavLink href="/Registration" class="nav-link">Registration</NavLink>
    </nav>


@code {
    private EventModel eventModel = new();
    private void HandleValidSubmit()
    {
         NavigationManager.NavigateTo("/Registration");
    }

    public class EventModel
    {
        [Required(ErrorMessage = "Event Name is required")]
        public string EventName { get; set; } = "Sample Event";

        [Required(ErrorMessage = "Event Date is required")]
        public DateTime EventDate { get; set; } = DateTime.Now;

        [Required(ErrorMessage = "Location is required")]
        public string Location { get; set; } = "Sample Location";

        [Required(ErrorMessage = "Description is required")]
        public string Description { get; set; } = "This is a sample event description.";
    }
    }
